%section.people
  %header
    %h2 People I Follow
  %table.table
    %thead
      %tr
        %th(width="30%")
        %th(width="20%") Videos in Queue
        %th(width="20%") Followers
        %th(width="30%") Unfollow
    %tbody
      - @relationships.each do |relationship|
        %tr
          %td
            = image_tag gravatar_for(relationship.leader)
            = link_to relationship.leader.username, relationship.leader
          %td.extra-padding= relationship.leader.queue_items_quantity
          %td.extra-padding= relationship.leader.total_number_of_people_who_follow_me
          %td.extra-padding
            = link_to relationship, method: :delete do
              %i.glyphicon.glyphicon-remove
