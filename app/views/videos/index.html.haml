%article.video_category
  %header
    - @categories.each do |category|
      %h3= link_to category.name, category_path(category)  
      %br  
      .videos.row
        - category.videos.each do |video|
          .video.col-sm-2
            = link_to video_path(video), nil do
              %img(src= "/tmp/#{video.small_cover_url}.jpg")
      %hr  