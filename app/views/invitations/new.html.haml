%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @invitation, label_errors: true, class: 'invite' do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset                  
          = f.text_field :recipient_name, label: "Friend's Name"         
          = f.email_field :recipient_email, label: "Friend's Email Address"        
          = f.text_area :message, rows: 6, placeholder: "Please join this really cool site!", label: "Invitation Message"
        %fieldset.form-group.action
          = f.primary "Send Invitation"
